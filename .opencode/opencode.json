{
    "$schema": "https://opencode.ai/config.json",
    "agent": {
        "farmer": {
            "description": "Primary agent for building full-stack applications using this monorepo template",
            "mode": "primary",
            "model": "anthropic/claude-sonnet-4-20250514",
            "temperature": 0.3,
            "tools": {
                "write": true,
                "edit": true,
                "bash": true,
                "read": true,
                "grep": true,
                "glob": true,
                "list": true
            }
        },
        "api": {
            "description": "Specialized agent for Hono.js API development and backend logic",
            "mode": "subagent",
            "model": "anthropic/claude-sonnet-4-20250514",
            "temperature": 0.2,
            "tools": {
                "write": true,
                "edit": true,
                "bash": true,
                "read": true
            }
        },
        "web": {
            "description": "Specialized agent for React frontend development and UI implementation",
            "mode": "subagent",
            "model": "anthropic/claude-sonnet-4-20250514",
            "temperature": 0.3,
            "tools": {
                "write": true,
                "edit": true,
                "bash": true,
                "read": true
            }
        },
        "database": {
            "description": "Specialized agent for Prisma database schema design and migrations",
            "mode": "subagent",
            "model": "anthropic/claude-sonnet-4-20250514",
            "temperature": 0.1,
            "tools": {
                "write": true,
                "edit": true,
                "bash": true,
                "read": true
            }
        }
    }
}